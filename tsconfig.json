{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": ".build"
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}